<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to "Movix", lists_path, class: "navbar-brand" %>
  <div class="row">
    <div class="link">
      <%= link_to "My lists", lists_path, class: "float-right" %>
      <%= link_to "New list", 'lists/new', class: "float-right" %>
    </div>
  </div>
</nav>

<div class="container">
  <h2 class="btn btn-warning"><%= @bookmarks.length %> Movies<h2>
  <%= @list.name %>
</div>

<div class="container">
  <%=  link_to 'add a movie', '/bookmarks/new' %>
  <div class="d-flex justify-content-around">
      <% @bookmarks.each do |bookmark|  %>
        <div class="card" style="width: 18rem;">
          <img src=<%= bookmark.movie.poster_url %> class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %> Â° <%= bookmark.movie.rating %></h5>
            <p class="card-text"><%= bookmark.movie.overview %></p>
            <%= link_to 'Delete', "#{params[:id]}/bookmarks/delete", method: "delete", class: "btn btn-danger"%>
          </div>
        </div>
      <% end %>
  </div>
</div>
